@model IEnumerable<PhoneBook.Models.Campaign>

@{
    ViewBag.Title = "Campaigns";
}

<h2>Campaigns</h2>
<p class="export-status"> @ViewBag.ExportStatus</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Export Campaigns", "Export")
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Details", "AddContacts", new { id=item.ID })
        </td>
    </tr>
}

</table>
